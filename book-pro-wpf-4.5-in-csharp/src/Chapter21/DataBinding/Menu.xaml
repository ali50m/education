<Window x:Class="DataBinding.Menu"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Menu"
		Height="300"
		Width="270"
		WindowStartupLocation="CenterScreen">

	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Margin"
					Value="5,5,5,0" />
			<Setter Property="FontSize"
					Value="14" />
		</Style>
	</Window.Resources>
	
	<Grid>
		<StackPanel Margin="5"
					Button.Click="ButtonClick">

			<Button>NavigateCollection</Button>
			<Button>FilterCollection</Button>
			<Button>FilterDataSet</Button>
			<Button>GroupList</Button>
			<Button>GroupInRanges</Button>

		</StackPanel>

	</Grid>
</Window>
