<controls:WindowEx x:Class="DataBinding.Menu"
				   xmlns:controls="clr-namespace:WPFControls;assembly=WPFControls"
				   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				   Title="Menu"
				   Height="407"
				   Width="238">
	<Window.Resources>
		<Style TargetType="{x:Type Button}">
			<Setter Property="Margin"
					Value="3,3,3,0" />
			<Setter Property="FontSize"
					Value="14" />
		</Style>
	</Window.Resources>
	<Grid>
		<StackPanel Margin="5"
					Button.Click="ButtonClick">
			<Button>ValueConverter</Button>
			<Button>MoreValueConverters</Button>
			<Button>ListStyles</Button>

			<Button>RadioButtonList</Button>
			<Button FontWeight="Bold">CheckBoxList</Button>
			<Button FontWeight="Bold">AlternatingHighlighting</Button>
			<Button FontWeight="Bold">VariedStyles</Button>

			<Button FontWeight="Bold"
					FontStyle="Italic">DataTemplateList</Button>
			<Button FontWeight="Bold"
					FontStyle="Italic">DataTemplateByType</Button>
			<Button>DataTemplateImages</Button>
			<Button>DataTemplateControls</Button>
			<Button>VariedTemplates</Button>
			<Button>ExpandingDataTemplate</Button>
			<Button>WrappedList</Button>

			<Button>ComboBoxSelectionBox</Button>

		</StackPanel>

	</Grid>
</controls:WindowEx>
