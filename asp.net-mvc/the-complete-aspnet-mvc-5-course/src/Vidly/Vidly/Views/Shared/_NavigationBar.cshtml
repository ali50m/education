@{
	IEnumerable<Tuple<string, string, string>> menuItems =
		new List<Tuple<string, string, string>>
		{
			//new Tuple<string, string, string>("Home", "Index", "Home"),
			//new Tuple<string, string, string>("About", "About", "Home"),
			//new Tuple<string, string, string>("Contact", "Contact", "Home"),
			new Tuple<string, string, string>("Customers", "Index", "Customer"),
			new Tuple<string, string, string>("Movies", "Index", "Movie")
		};
}

<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			@Html.ActionLink("Vidly", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				@foreach (var item in menuItems)
				{
					<li>@Html.ActionLink(item.Item1, item.Item2, item.Item3)</li>
				}
			</ul>
			@Html.Partial("_LoginPartial")
		</div>
	</div>
</div>

